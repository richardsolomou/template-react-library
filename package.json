{
  "name": "template-react-library",
  "version": "0.0.3",
  "type": "module",
  "description": "Template for React library projects.",
  "keywords": [],
  "homepage": "https://solomou.dev",
  "bugs": {
    "url": "https://github.com/richardsolomou/template-react-library/issues",
    "email": "richard@solomou.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/richardsolomou/template-react-library"
  },
  "license": "MIT",
  "author": {
    "name": "Richard Solomou",
    "email": "richard@solomou.dev",
    "url": "https://solomou.dev"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./button": {
      "import": {
        "types": "./dist/button.d.ts",
        "default": "./dist/button.js"
      },
      "require": {
        "types": "./dist/button.d.cts",
        "default": "./dist/button.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "check-types": "tsc --noEmit",
    "check": "ultracite check",
    "fix": "ultracite fix --unsafe",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm build && changeset publish",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.9",
    "@changesets/cli": "^2.29.8",
    "@chromatic-com/storybook": "^4.1.3",
    "@ras-sh/typescript-config": "^0.0.3",
    "@storybook/addon-a11y": "^10.1.9",
    "@storybook/addon-docs": "^10.1.9",
    "@storybook/addon-vitest": "^10.1.9",
    "@storybook/react-vite": "^10.1.9",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/browser": "4.0.15",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "globals": "^16.5.0",
    "jsdom": "^27.3.0",
    "lefthook": "^2.0.12",
    "playwright": "^1.57.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "storybook": "^10.1.9",
    "tsdown": "0.18.0",
    "typescript": "^5.9.3",
    "ultracite": "6.4.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.15"
  }
}
